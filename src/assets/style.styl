.player-container
  display: block
  cursor: pointer
  width: 100%
  position: relative
  transform: translateZ(0px)
  overflow: hidden
  direction: ltr
  min-height: 80px

  &.audio
    background-color: #fff

  &.video
    color: rgba(255, 255, 255, 0.85)

    video
      display: block
      width: 100%
      height: 100%

    .control-bar
      background: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.65))

    .preloader
      position: absolute
      top: 50%
      left: 50%
      margin-left: -(64 / 2)px
      margin-top: -(64 / 2)px

  .player
    height: 100%
    width: 100%

  .control-bar
    bottom: 0px
    cursor: auto
    height: 80px
    position: absolute
    width: 100%
    opacity 0
    transition all 0.3s
    padding: 8px 8px
    &.visible
      opacity 1

  .scrubber
    margin: 0px 16px -4px

  .times
    font-size: 13px
    font-weight: 400
    font-family: 'helvetica neue', arial
    user-select: none
    flex-shrink: 0
    margin-left: 15px
    text-align: right
    margin-right: 16px
    padding: 10px 0;

  .layout
    display: flex
    flex: 1 1 auto
    flex-wrap: nowrap
    min-width: 0

  .flex
    flex: 1 1 auto
    max-width: 100%

  .spacer
    flex-grow: 1!important

  .btn
    display: inline-flex
    position: relative
    vertical-align: middle
    outline: 0
    padding: 8px
    border-radius: 50%
    transition: all 0.2s

    &:hover
      background-color: rgba(125, 125, 125, 0.3)

    svg
      display: block
      fill: currentColor
      height: 24px
      pointer-events: none
      width: 24px
      overflow: hidden
      box-sizing: inherit
      transform: scale(1)